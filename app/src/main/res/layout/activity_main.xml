<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="nik.uniobuda.hu.galambo.MainActivity"
            android:background="#5c436A">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffc020"
                    android:id="@+id/aa"
                    android:textSize="30sp"/>

                <ImageView
                    android:id="@+id/galamb_kep"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null" />


                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gomb"
                    android:layout_gravity="center"
                    android:text="Nyomj meg"
                    android:textColor="#ffffff"
                    android:background="#FF0000"
                    android:layout_below="@id/aa"
                    android:layout_centerHorizontal="true"/>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/feltolto"
                    android:text="Frissítés"
                    android:textColor="#000000"
                    android:background="#f7e929"
                    android:layout_below="@id/gomb"
                    android:layout_centerHorizontal="true"/>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/bolt"
                    android:text="Irány a bolt!"
                    android:textColor="#ffffff"
                    android:background="#28ab31"
                    android:layout_below="@id/feltolto"
                    android:layout_centerHorizontal="true"/>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/kaja"
                    android:text="Kaja választás!"
                    android:textColor="#ff8103"
                    android:background="#82f0ff"
                    android:layout_below="@id/bolt"
                    android:layout_centerHorizontal="true"/>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/tevekenyseg"
                    android:text="Tevékenység választás"
                    android:textColor="#cef9ba"
                    android:background="#5e1e96"
                    android:layout_below="@id/kaja"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#6699FF"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!--<GridView
        android:id="@+id/lista"
        android:numColumns="1"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:gravity="start"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_width="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_height="match_parent"/>
-->

</android.support.v4.widget.DrawerLayout>
